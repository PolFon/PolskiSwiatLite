<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Design system color variables -->

    <!-- Layers -->
    <!-- Default Screen background, Frontlayer background, App Bar Top, App Bar Bottom, Frontlayer header -->
    <color name="fx_mobile_layer_color_1">#332A2A</color>
    <!-- Card background, Menu background, Dialog, Banner -->
    <color name="fx_mobile_layer_color_2">#4D4141</color>
    <!-- Search -->
    <color name="fx_mobile_layer_color_3">#221B1B</color>
    <!-- App Bar Top (edit), Text Cursor, Selected Tab Check -->
    <color name="fx_mobile_layer_color_accent">#FF7171</color>
    <!-- Selected tab -->
    <color name="fx_mobile_layer_color_accent_nonopaque">#52FF5959</color>
    <!-- Selected tab -->
    <color name="fx_mobile_layer_color_accent_opaque">#623232</color>
    <color name="fx_mobile_layer_color_scrim">#F21A1414</color>
    <!-- Tooltip -->
    <color name="fx_mobile_layer_color_gradient_start">#CB2A2A</color>
    <!-- Tooltip -->
    <color name="fx_mobile_layer_color_gradient_end">#FF7171</color>

    <!-- Action -->
    <!-- Primary button, Snackbar, Floating action button, Chip selected -->
    <color name="fx_mobile_action_color_primary">#E54242</color>
    <!-- Secondary button -->
    <color name="fx_mobile_action_color_secondary">#E6E0E0</color>
    <!-- Filter -->
    <color name="fx_mobile_action_color_tertiary" tools:ignore="UnusedResources">#5E5252</color>
    <!-- Chip -->
    <color name="fx_mobile_action_quarternary" tools:ignore="UnusedResources">#221B1B</color>
    <!-- Checkbox default, Radio button default -->
    <color name="fx_mobile_action_color_form_default" tools:ignore="UnusedResources">#FEFBFB</color>
    <!-- Checkbox selected, Radio button selected -->
    <color name="fx_mobile_action_color_form_selected" tools:ignore="UnusedResources">#FF7171</color>
    <!-- Switch background OFF, Switch background ON -->
    <color name="fx_mobile_action_color_form_surface" tools:ignore="UnusedResources">#665B5B</color>
    <!-- Checkbox disabled, Radio disabled -->
    <color name="fx_mobile_action_color_form_disabled" tools:ignore="UnusedResources">#665B5B</color>
    <!-- Switch thumb ON -->
    <color name="fx_mobile_action_color_form_on" tools:ignore="UnusedResources">#FF7171</color>
    <!-- Switch thumb OFF -->
    <color name="fx_mobile_action_color_form_off" tools:ignore="UnusedResources">#FEFBFB</color>
    <!-- Scroll indicator active -->
    <color name="fx_mobile_action_color_indicator_active">#8E8080</color>
    <!-- Scroll indicator inactive -->
    <color name="fx_mobile_action_color_indicator_inactive">#665B5B</color>

    <!-- Text -->
    <!-- Primary text -->
    <color name="fx_mobile_text_color_primary">#FEFBFB</color>
    <!-- Secondary text -->
    <color name="fx_mobile_text_color_secondary">#D8CFCF</color>
    <!-- Disabled text -->
    <color name="fx_mobile_text_color_disabled">#66FEFBFB</color>
    <!-- Warning text -->
    <color name="fx_mobile_text_color_warning">@color/photonRed20</color>
    <!-- Warning text on Secondary button -->
    <color name="fx_mobile_text_color_warning_button">@color/photonRed70</color>
    <!-- Small heading, Text link -->
    <color name="fx_mobile_text_color_accent">#FF9E9E</color>
    <!-- Small heading, Text link -->
    <color name="fx_mobile_text_color_accent_disabled" tools:ignore="UnusedResources">#99FF9E9E</color>
    <!-- Text Inverted/On Color -->
    <color name="fx_mobile_text_color_oncolor_primary">#FEFBFB</color>
    <!-- Text Inverted/On Color -->
    <color name="fx_mobile_text_color_oncolor_secondary">#D8CFCF</color>
    <!-- Action Primary text -->
    <color name="fx_mobile_text_color_action_primary">#FEFBFB</color>
    <!-- Action Secondary text -->
    <color name="fx_mobile_text_color_action_secondary">#1A1414</color>
    <!-- Action Tertiary text -->
    <color name="fx_mobile_text_color_action_tertiary" tools:ignore="UnusedResources">#FEFBFB</color>
    <!-- Action Tertiary Active text -->
    <color name="fx_mobile_text_color_action_tertiary_active" tools:ignore="UnusedResources">#FEFBFB</color>

    <!-- Icon -->
    <!-- Primary icon -->
    <color name="fx_mobile_icon_color_primary">#FEFBFB</color>
    <!-- Inactive tab -->
    <color name="fx_mobile_icon_color_primary_inactive">#99FEFBFB</color>
    <!-- Secondary icon -->
    <color name="fx_mobile_icon_color_secondary">#D8CFCF</color>
    <!-- Active tab -->
    <color name="fx_mobile_icon_color_active">#FF7171</color>
    <!-- Disabled icon -->
    <color name="fx_mobile_icon_color_disabled" tools:ignore="UnusedResources">#66FEFBFB</color>
    <!-- Icon inverted (on color) -->
    <color name="fx_mobile_icon_color_oncolor">#FEFBFB</color>
    <!-- Information -->
    <color name="fx_mobile_icon_color_information">@color/photonBlue30</color>
    <!-- Icon button -->
    <color name="fx_mobile_icon_color_button" tools:ignore="UnusedResources">#FEFBFB</color>
    <color name="fx_mobile_icon_color_warning" tools:ignore="UnusedResources">@color/photonRed20</color>
    <!-- Warning icon on Secondary button -->
    <color name="fx_mobile_icon_color_warning_button">@color/photonRed70</color>
    <color name="fx_mobile_icon_color_accent_violet">@color/photonViolet20</color>
    <color name="fx_mobile_icon_color_accent_blue">@color/photonBlue20</color>
    <color name="fx_mobile_icon_color_accent_pink">@color/photonPink20</color>
    <color name="fx_mobile_icon_color_accent_green">@color/photonGreen20</color>
    <color name="fx_mobile_icon_color_accent_yellow">@color/photonYellow20</color>
    <!-- Action Primary Icon -->
    <color name="fx_mobile_icon_color_action_primary" tools:ignore="UnusedResources">#FEFBFB</color>
    <!-- Action Secondary Icon -->
    <color name="fx_mobile_icon_color_action_secondary">#1A1414</color>
    <!-- Action Tertiary Icon -->
    <color name="fx_mobile_icon_color_action_tertiary" tools:ignore="UnusedResources">#FEFBFB</color>
    <!-- Reader, ETP Shield -->
    <color name="fx_mobile_icon_color_gradient_start">#FF9E9E</color>
    <!-- Reader, ETP Shield -->
    <color name="fx_mobile_icon_color_gradient_end">#FF0000</color>

    <!-- Border -->
    <!-- Default, Divider, Dotted -->
    <color name="fx_mobile_border_color_primary">#665B5B</color>
    <!-- Onboarding -->
    <color name="fx_mobile_border_color_inverted" tools:ignore="UnusedResources">#E6E0E0</color>
    <!-- Form parts -->
    <color name="fx_mobile_border_color_form_default" tools:ignore="UnusedResources">#FEFBFB</color>
    <!-- Active tab (Nav), Selected tab, Active form -->
    <color name="fx_mobile_border_color_accent">#FF7171</color>
    <!-- Form parts -->
    <color name="fx_mobile_border_color_disabled" tools:ignore="UnusedResources">#66FEFBFB</color>
    <!-- Form parts -->
    <color name="fx_mobile_border_color_warning" tools:ignore="UnusedResources">@color/photonRed40</color>

    <!-- Normal theme colors for dark mode -->
    <color name="accent_normal_theme">#FF5959</color>
    <color name="accent_high_contrast_normal_theme">#FF7171</color>
    <color name="neutral_normal_theme">#F0EDED</color>
    <color name="neutral_faded_normal_theme">#1FFEFBFB</color>
    <color name="toggle_off_knob_normal_theme">#FEFBFB</color>
    <color name="toggle_off_track_normal_theme">#FEFBFB</color>
    <color name="fill_link_from_clipboard_normal_theme">#FF7171</color>
    <color name="sync_disconnected_icon_fill_normal_theme">#FFF36E</color>
    <color name="sync_disconnected_background_normal_theme">#5B5846</color>
    <color name="onboarding_illustration_selected_normal_theme">@color/accent_normal_theme</color>
    <color name="onboarding_illustration_deselected_normal_theme">#99FEFBFB</color>
    <color name="add_on_private_browsing_exterior_circle_background_normal_theme">@color/accent_normal_theme</color>
    <color name="prompt_login_edit_text_cursor_color_normal_theme">#FF5959</color>
    <color name="search_suggestion_indicator_icon_color_normal_theme">@color/photonGreen60</color>
    <color name="search_suggestion_indicator_icon_bookmark_color_normal_theme">@color/photonBlue40</color>

    <!-- Reader View colors -->
    <color name="mozac_feature_readerview_text_color">@color/fx_mobile_text_color_primary</color>

    <!-- Tab Counter colors -->
    <color name="mozac_ui_tabcounter_default_tint" tools:ignore="UnusedResources">@color/fx_mobile_icon_color_primary</color>
    <color name="mozac_ui_tabcounter_default_text" tools:ignore="UnusedResources">@color/fx_mobile_text_color_primary</color>
</resources>
